{
  "name": "Link2Phone",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Conveniently* send links from your browser to any valid cellphone number. (Install to understand the asterisk)",
  "permissions": [
    "https://api.twilio.com/",
    "background",
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {
    "default_icon": {},
    "default_popup": "popup.html",
    "default_title": "Link2Phone",
    "options_page": "options.html"
  }
}
